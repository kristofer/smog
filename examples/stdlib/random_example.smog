" Example demonstrating Random number generation "
| random num flt bytes |

" Random class definition "
Object subclass: #Random [ ]

'=== Random Number Generation Example ===' println.
'' println.

random := Random new.

" Generate random integers "
'=== Random Integers ===' println.
'Generating 5 random integers between 1 and 100:' println.
5 timesRepeat: [
    num := random randomInt: 1 max: 100.
    num println.
].
'' println.

" Generate random randomFloats "
'=== Random Floats ===' println.
'Generating 5 random randomFloats between 0.0 and 1.0:' println.
5 timesRepeat: [
    flt := random randomFloat.
    flt println.
].
'' println.

" Generate random bytes "
'=== Random Bytes ===' println.
'Generating 16 random bytes (base64 encoded):' println.
bytes := random randomBytes: 16.
bytes println.
'' println.

" Generate 32 random bytes for a key "
'Generating 32 random bytes for encryption key:' println.
bytes := random randomBytes: 32.
bytes println.

'Done!' println.
