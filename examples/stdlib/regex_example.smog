" Example demonstrating Regular Expression functionality "
| regex matched matches replaced text |

" Regex class definition "
Object subclass: #Regex [ ]

'=== Regular Expression Example ===' println.
'' println.

regex := Regex new.

" Test pattern matching "
'=== Pattern Matching ===' println.
matched := regex regexMatch: '\d+' text: 'abc123def'.
'Pattern \d+ matches "abc123def": ' print.
matched println.

matched := regex regexMatch: '\d+' text: 'abcdef'.
'Pattern \d+ matches "abcdef": ' print.
matched println.
'' println.

" Find all matches "
'=== Find All Matches ===' println.
text := 'The numbers are 123, 456, and 789'.
'Text: ' print.
text println.

matches := regex regexFindAll: '\d+' text: text.
'Matches: ' print.
matches println.
'' println.

" Replace matches "
'=== Replace Matches ===' println.
text := 'Price: 100 dollars, Discount: 20 dollars'.
'Original: ' print.
text println.

replaced := regex regexReplace: '\d+' text: text with: 'XXX'.
'Replaced: ' print.
replaced println.
'' println.

'Done!' println.
